
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Details - My Shop</title>
    <link rel="stylesheet" href="~/css/Customer/OrderDetails.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="container">
        <h1>Order Details</h1>

        <!-- Order Status Banner -->
        <div class="order-status">
            <div class="status-badge processing">
                <i class="fas fa-clock"></i>
                Processing
            </div>
            <div class="order-info">
                <p>Order #1234-5678</p>
                <p>Placed on March 13, 2024</p>
            </div>
        </div>

        <!-- Order Progress -->
        <div class="order-progress">
            <div class="progress-step completed">
                <div class="step-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="step-label">Order Placed</div>
                <div class="step-date">Mar 13, 10:30 AM</div>
            </div>
            <div class="progress-step completed">
                <div class="step-icon">
                    <i class="fas fa-credit-card"></i>
                </div>
                <div class="step-label">Payment Confirmed</div>
                <div class="step-date">Mar 13, 10:35 AM</div>
            </div>
            <div class="progress-step active">
                <div class="step-icon">
                    <i class="fas fa-box"></i>
                </div>
                <div class="step-label">Processing</div>
                <div class="step-date">Mar 13, 11:00 AM</div>
            </div>
            <div class="progress-step">
                <div class="step-icon">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <div class="step-label">Shipped</div>
                <div class="step-date">Expected Mar 15</div>
            </div>
            <div class="progress-step">
                <div class="step-icon">
                    <i class="fas fa-home"></i>
                </div>
                <div class="step-label">Delivered</div>
                <div class="step-date">Expected Mar 16</div>
            </div>
        </div>

        <!-- Customer and Order Information -->
        <div class="info-grid">
            <div class="info-card">
                <h2>Customer Information</h2>
                <div class="info-content">
                    <p><strong>Name:</strong> John Doe</p>
                    <p><strong>Email:</strong> john.doe@example.com</p>
                    <p><strong>Phone:</strong> +1 (555) 123-4567</p>
                </div>
            </div>

            <div class="info-card">
                <h2>Shipping Address</h2>
                <div class="info-content">
                    <p>123 Main Street</p>
                    <p>Apt 4B</p>
                    <p>New York, NY 10001</p>
                    <p>United States</p>
                </div>
            </div>

            <div class="info-card">
                <h2>Payment Details</h2>
                <div class="info-content payment-info">
                    <div class="card-info">
                        <i class="fab fa-cc-visa"></i>
                        <span>•••• •••• •••• 4567</span>
                    </div>
                    <div class="payment-status">
                        <i class="fas fa-check-circle"></i>
                        Payment Confirmed
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Items -->
        <div class="order-items">
            <h2>Order Items</h2>
            <div class="items-list">
                <div class="item">
                    <img src="https://via.placeholder.com/100"
                         alt="Product 1"
                         class="item-image" />
                    <div class="item-details">
                        <h3>Wireless Earbuds Pro</h3>
                        <p class="item-sku">SKU: WE-001</p>
                    </div>
                    <div class="item-quantity">2x</div>
                    <div class="item-price">$129.99</div>
                    <div class="item-total">$259.98</div>
                </div>

                <div class="item">
                    <img src="https://via.placeholder.com/100"
                         alt="Product 2"
                         class="item-image" />
                    <div class="item-details">
                        <h3>Smart Watch Series 5</h3>
                        <p class="item-sku">SKU: SW-002</p>
                    </div>
                    <div class="item-quantity">1x</div>
                    <div class="item-price">$299.99</div>
                    <div class="item-total">$299.99</div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="order-summary">
            <h2>Order Summary</h2>
            <div class="summary-rows">
                <div class="summary-row">
                    <span>Subtotal</span>
                    <span>$559.97</span>
                </div>
                <div class="summary-row">
                    <span>Shipping</span>
                    <span>$15.00</span>
                </div>
                <div class="summary-row">
                    <span>Tax (10%)</span>
                    <span>$56.00</span>
                </div>
                <div class="summary-row total">
                    <span>Total</span>
                    <span>$630.97</span>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <button class="btn">
                <i class="fas fa-download"></i>
                Download Invoice
            </button>
            <button class="btn">
                <i class="fas fa-print"></i>
                Print Order
            </button>
            <button class="btn">
                <i class="fas fa-headset"></i>
                Contact Support
            </button>
        </div>
    </div>
</body>
